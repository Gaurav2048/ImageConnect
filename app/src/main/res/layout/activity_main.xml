<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main_view"
    android:layout_height="match_parent"
    tools:context="com.example.saurav.imageconnect.MainActivity">
    <com.flipboard.bottomsheet.BottomSheetLayout
        android:id="@+id/bottomsheet"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
         android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/root"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </com.flipboard.bottomsheet.BottomSheetLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:id="@+id/measure"
        >
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:id="@+id/card_info"
       android:layout_alignParentTop="true"
       android:background="@color/colorPrimary"
       >

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="IMAGE CONNECT"
         android:id="@+id/app_name"
         android:layout_centerVertical="true"
         android:layout_alignParentLeft="true"
         android:layout_marginLeft="10dp"
         android:textSize="16dp"
         android:textColor="#fff"

         />
     <ImageView
         android:layout_width="35dp"
         android:layout_height="35dp"
         android:id="@+id/settings"
         android:src="@drawable/ic_setting"
         android:layout_alignParentRight="true"
         android:layout_marginRight="10dp"
         android:layout_centerVertical="true"
         />
      <ImageView
          android:layout_width="35dp"
          android:layout_height="35dp"
          android:id="@+id/profile"
          android:padding="8dp"
          android:layout_centerVertical="true"
          android:layout_toLeftOf="@+id/settings"
          android:layout_marginRight="10dp"
          android:src="@drawable/ic_profile"

          />

   </RelativeLayout>
   <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="120dp"
       android:layout_marginRight="20dp"
       android:layout_marginLeft="25dp"
       android:id="@+id/display_view"
       android:layout_marginTop="45dp"
       android:layout_marginBottom="5dp"
       app:cardElevation="4dp"

       >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="120dp">
<ImageView
       android:layout_width="30dp"
       android:layout_height="30dp"
       android:id="@+id/cancel_toswipe"
       android:layout_alignParentTop="true"
       android:elevation="4dp"
       android:layout_alignParentRight="true"
       android:src="@drawable/ic_cancel"
       android:layout_margin="6dp"

       />
   <de.hdodenhof.circleimageview.CircleImageView
       android:id="@+id/profile_image"
       android:layout_width="50dp"
       android:layout_height="50dp"
       android:layout_marginLeft="10dp"
       android:layout_alignParentTop="true"
       android:src="@drawable/profile"
       android:layout_marginTop="10dp"
       app:civ_border_width="2dp"
       app:civ_border_color="#d6d3d3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Gunjan Kalita"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_marginLeft="14dp"
        android:textSize="20dp"
        android:layout_marginTop="17dp"
        android:gravity="center"
        android:id="@+id/name_prfile"
        android:textColor="#000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="74dp"
        android:layout_below="@+id/name_prfile"
        android:id="@+id/status"
        android:text="Hey there! I am using Image connect."
        android:textColor="#cbcbcb"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_below="@+id/status"
    android:layout_margin="6dp"
    android:background="@drawable/rect_back"
    android:layout_marginTop="7dp"
    android:orientation="horizontal"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@drawable/rect_back"
        android:textSize="14dp"
        android:textColor="@color/colorPrimary"
        android:text="One"
        android:drawableLeft="@drawable/ic_one"
        android:gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:textSize="14dp"
        android:background="@drawable/rect_back"
        android:textColor="@color/colorPrimary"
        android:text="Two"
        android:drawableLeft="@drawable/ic_one"
        android:gravity="center"
        />  <TextView
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_weight="1"
    android:background="@drawable/rect_back"
    android:textSize="14dp"
    android:textColor="@color/colorPrimary"
    android:text="Three"
    android:drawableLeft="@drawable/ic_one"
    android:gravity="center"
    />
</LinearLayout>
</RelativeLayout>

   </android.support.v7.widget.CardView>
   </RelativeLayout>
   <android.support.design.widget.TabLayout
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:background="#ECEFF4"
       android:layout_below="@+id/display_view"
       android:layout_marginTop="165dp"
        app:tabGravity="fill"
       app:tabIndicatorHeight="0dp"
       app:tabMode="scrollable"
       android:id="@+id/tablayout"

       ></android.support.design.widget.TabLayout>
   <android.support.v4.view.ViewPager
       android:id="@+id/viewpager"
       android:layout_width="match_parent"
       android:layout_marginTop="215dp"
       android:layout_height="fill_parent"
       android:layout_gravity="bottom"
       android:layout_below="@+id/tablayout"
       android:background="#fff"
       app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</android.support.design.widget.CoordinatorLayout>