<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="6dp"
     android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:id="@+id/friend_pic_front"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/profile"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/friend_pic_front"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="Vikram Gaurav"
                android:textColor="#000"
                android:id="@+id/friend_name"
                android:textSize="18dp"
                android:maxLines="1"
                android:gravity="left|center_vertical"


                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:text="11.45 pm"
                android:id="@+id/message_sendtime"
                android:textColor="@color/colorPrimary"
                android:textSize="12dp"
                android:paddingRight="6dp"
                android:gravity="right|center_vertical"

                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:weightSum="100"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="Urgent! report asap."
                android:textColor="#cbcbcb"
                android:id="@+id/message"
                android:textSize="15dp"
                android:maxLines="1"
                android:gravity="left|center_vertical"


                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="90"

                >
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="1"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="@drawable/circular_text"
                    android:id="@+id/no_of_message"
                    android:textColor="#fff"
                    android:textSize="9dp"
                    android:gravity="center"

                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:layout_toRightOf="@+id/friend_pic_front"
        android:background="#EEEDEE"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/friend_pic_front"
        />

</RelativeLayout>