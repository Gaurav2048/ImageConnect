<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.santalu.diagonalimageview.DiagonalImageView
        android:id="@+id/image_friend"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile"
        app:di_borderColor="#FF5722"
        app:di_borderEnabled="false"
        app:di_direction="left"
        app:di_overlap="20dp"
        app:di_position="right"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Gunjan kalita "
    android:textColor="#000"
    android:layout_marginBottom="5dp"
    android:layout_toRightOf="@+id/image_friend"
    android:id="@+id/name_friend"
    android:textSize="16dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"

    />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="9dp"
            android:id="@+id/active"
            android:src="@android:color/holo_green_light"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/image_friend"
            android:layout_below="@+id/name_friend"
            android:text="hey there! I am using \n  image connect"
            android:textSize="12dp"
            android:textColor="#cbcbcb"

            />
    </RelativeLayout>

</android.support.v7.widget.CardView>